<Window x:Class="NUPROJECT_vcs.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NUPROJECT_vcs"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="350"
        Style="{DynamicResource CustomWindowStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold">
            NUOFFICE LOGIN
        </TextBlock>

        <Frame Grid.Row ="1" x:Name="LoginFrame" Source="LoginPage.xaml" NavigationUIVisibility="Hidden">
        </Frame>

    </Grid>
</Window>
